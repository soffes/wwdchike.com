source 'https://rubygems.org'

# Latest Ruby
ruby '2.3.0'

# Web server
gem 'puma'

# Simple HTTP
gem 'sinatra'

# Faster ERB
gem 'erubis'

# Use the right host
gem 'rack-canonical-host'

# Asset pipeline
gem 'sprockets'

# Stylesheets
gem 'sass'
gem 'sprockets-sass'
gem 'bourbon'

# JavaScripts
gem 'coffee-script'

group :development do
  gem 'foreman'
end
